-- Initial bnfc-system-tests.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

-- The name of the package.
name:                bnfc-system-tests

-- The package version.
-- Does not play much of a role since this is just an internal executable.
-- So let it equal the BNFC version!
--
-- Instruction: See the Haskell package versioning policy (PVP)
-- for standards guiding when and how versions should be incremented.
-- http://www.haskell.org/haskellwiki/Package_versioning_policy
-- PVP summary:      +-+------- breaking API changes
--                   | | +----- non-breaking API additions
--                   | | | +--- code changes with no API change
version:             2.9.7.0

-- A short (one-line) description of the package.
synopsis:            System tests for BNFC

-- A longer description of the package.
description:         Run the BNFC system test suite.

-- The license under which the package is released.
license:             BSD3

-- The file containing the license text.
license-file:        LICENSE

-- The package author(s).
author:              Grégoire Détrez, Andreas Abel

-- An email address to which users can send suggestions, bug reports, and
-- patches.
maintainer:          andreas.abel@gu.se

-- A copyright notice.
-- copyright:

category:            Testing

build-type:          Simple

-- Extra files to be distributed with the package, such as examples or a
-- README.
-- extra-source-files:

-- Constraint on the version of Cabal needed to build this package.
cabal-version:       >=1.10

tested-with:
    GHC == 9.12.2
    GHC == 9.10.2
    GHC == 9.8.4
    GHC == 9.6.7
    GHC == 9.4.8
    GHC == 9.2.8
    GHC == 9.0.2
    GHC == 8.10.7
    GHC == 8.8.4
    GHC == 8.6.5
    GHC == 8.4.4
    GHC == 8.2.2

executable bnfc-system-tests
  -- .hs or .lhs file containing the Main module.
  main-is:             Main.hs

  -- Modules included in this executable, other than Main.
  other-modules:       SucceedLBNFTests
                       FailLBNFTests
                       OutputParser
                       ParameterizedTests
                       PygmentsTests
                       RegressionTests
                       TestData
                       TestUtils
                       License

  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:

  -- Other library packages from which modules are imported.
  build-depends:
      base        >= 4.10 && <5
      -- base-4.10 is ghc-8.2 (required by HTF)
    , containers
    , regex-posix >= 0.95.2
    , HUnit       >= 1.2
    , shelly      >= 1.9
    , filepath
    , text
    , HTF         >= 0.15.0.0
      -- API change in HTF-0.15 (issue #416)
    , random
    , string-qq

  -- Directories containing source files.
  hs-source-dirs: . src

  -- Base language which the package is written in.
  default-language:    Haskell2010
  default-extensions:
    ExtendedDefaultRules
    OverloadedStrings
    ScopedTypeVariables
  ghc-options:
    -W
    -Wno-type-defaults
